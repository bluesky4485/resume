      // <p class="desc">用于中文简繁转换的jQuery插件。</p>
      // <p class="tec">JavaScript / jQuery</p>
      // </div>
      // </div>
    .row
      .col-xs-12
        h2.text-center 技能
    .row
      .col-xs-10.col-xs-offset-1
        .row
          each skill, index in skills
            .col-xs-6.skill
              h3= skill.name
              .progress
                .progress-bar.progress-bar-success(style='width: ' + skill.degree + '%')
    .row
      .col-xs-12
        h2.text-center 阅读
    .row.books
      each book, index in books
        -var cls = (index === 0) ? 'col-xs-2 col-xs-offset-1' : 'col-xs-2'
        div(class=cls)
          a(href=book.link, target='_blank', class='book')
            img.img-responsive(src=book.image, alt=book.title)
            div.quote= book.quote
    .row
      .col-xs-12
        h2.text-center 教育
    .edu-item-wap
      each edu in educations
        .row.edu-item
          .col-xs-5.text-right.time= edu.period
          .col-xs-7= edu.title
  .footer
    .container
      .version Last update: #{date}
      .copyright 2014 © by hustlzp
